<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout 
    	android:id="@+id/linearLayoutH1" 
    	android:layout_height="85px"
    	android:layout_width="fill_parent"
    	android:layout_alignParentTop="true"
    	android:orientation="horizontal">
		<Button 
	       	android:id="@+id/callNumber" 
	       	android:layout_height="65dp" 
	       	android:layout_width="75dp"
	       	android:layout_alignParentLeft="true"
	       	android:drawableTop="@drawable/ic_menu_call"
	       	android:background="@null"
			android:enabled="true"
	       	android:onClick="startDialer">
    	</Button>	
	    <TextView 
	 		android:id="@+id/textViewActionDetails" 
			android:layout_width="fill_parent" 
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:textStyle="bold" />
	</LinearLayout>
	<WebView 
		android:id="@+id/webViewActionDetails" 
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent"
    	android:text="@string/webViewActionDetailsEmpty"/>
</LinearLayout>
